---
import { getCollection } from "astro:content";
import BlogPost from "../components/BlogPost.astro";
import Layout from "../layouts/Layout.astro";
import { PERSONAL_INFO } from '../consts';
import MyH2Title from "src/components/MyTitles/MyH2Title.astro";

export const prerender = true;
const allPosts = await getCollection("posts");


const { name } = PERSONAL_INFO;
const title = `${name} - blog`;
---

<Layout pageTitle={title}>
  <MyH2Title MyTitle={title}/>
  <div class="neumorphism-post">
    <p>This is where I will post about my journey learning Astro.</p>
    <ul>
      {
        allPosts.map((post) => (
          <BlogPost url={post.slug} title={post.data.title} />
        ))
      }
    </ul>
  </div>
</Layout>
