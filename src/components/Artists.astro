---
import { PERSONAL_INFO, images } from "../consts";
export const prerender = true;
---
  <div class="py-4 sm:py-6 lg:py-8 flex flex-col justify-between h-full max-w-5xl">
    <main class="mb-auto">
      <div class="my-8 sm:my-12">
        <h2
          class="text-gray-800 dark:text-white text-2xl md:text-3xl lg:text-4xl text-center mb-4 md:mb-6 font-semibold"
        >
          {PERSONAL_INFO.title}
        </h2>

        <p
          class="max-w-screen-md dark:text-slate-400 text-gray-500 md:text-lg text-center mx-auto"
        >
          {PERSONAL_INFO.subtitle}
        </p>
      </div>

      <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
        <div
          id="my-gallery"
          class="pswp-gallery grid grid-cols-1 sm:grid-cols-3 gap-4 md:gap-6 xl:gap-8  gallery"
        >
          {
             images.map((image) => (
              <a
                href={image.href}
                data-cropped="true"
                data-pswp-width={image.size.width}
                data-pswp-height={image.size.height}
                class="group h-72   flex justify-end items-end bg-gray-100 overflow-hidden rounded-xl shadow-lg relative gallery-item hover:shadow-xl"
              >
                <div class="w-full h-full flex object-cover object-center absolute inset-0 group-hover:scale-110 transition duration-200 text-transparent">
                  <img
                    src={image.href}
                    alt={image.label}
                    // format="webp"
                    width={image.size.width / 3}
                  />
                </div>

                <div class="bg-gradient-to-t from-black via-transparent to-transparent opacity-20 absolute inset-0 pointer-events-none group-hover:opacity-0 transition duration-200" />

                <span class="inline-block text-gray-200 text-xs md:text-sm border border-gray-500 rounded-lg backdrop-blur relative px-2  py-1 mr-3 mb-3 group-hover:opacity-0 transition duration-200">
                  {image.label}
                </span>
              </a>
            ))
          }
        </div>
      </div>
    </main>

  </div>
